pipeline {
  agent none
  stages {
		stage('maven打包') {
		    agent {
				docker {
					image 'maven:3.5.4-jdk-8'
					args '-v /root/.m2:/root/.m2'
				}
		    }
		  
		    steps {
				sh 'mvn -B -DskipTests clean package'
		    }
		}
		
		stage('备份旧war包') {
			agent { label 'backup-label'}
			steps {
				script{
					sh 'pwd'
					def backup = '/home/webapps_backup/CounterWebApp_'+currentBuild.number+'.war'
					def dest = '/home/webapps/CounterWebApp.war'
					def src = '/var/jenkins_home/workspace/测试远程部署/target/CounterWebApp.war'
					sh "cp  ${src} ${dest}"
					sh "cp  ${dest} ${backup}"
					echo 'backup success'
				}
			}
		}
		
		stage('远程发布到服务器') {
			agent{
				docker{
					image 'adhax/alpine-sshpass'
					args '-v /home/webapps:/home/webapps'
				}
			}
			
			steps {
				sh 'pwd'
				script{
					def backup = '/home/webapps_backup/CounterWebApp_'+currentBuild.number+'.war'
					def dest = '/home/webapps/CounterWebApp.war'
					def src = '/var/jenkins_home/workspace/maven-spring-web-project/target/CounterWebApp.war'
					sh "cp  ${src} ${dest}"
					sh "cp  ${dest} ${backup}"
					sh "sh  /home/webapps/auto_deploy.sh"	
					echo "auto_deploy success"
				}
			}
		}
	}
}